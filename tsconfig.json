{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}